{
    "name": "mockmark-monorepo",
    "private": true,
    "scripts": {
        "build": "pnpm -r build",
        "build:core": "pnpm --filter @mockmark/core build",
        "build:react": "pnpm --filter mockmark build",
        "typecheck": "pnpm -r typecheck",
        "dev:react": "pnpm --filter react-demo dev",
        "dev:vue": "pnpm --filter vue-demo dev",
        "dev:angular": "pnpm --filter angular-demo dev",
        "publish:all": "pnpm build && pnpm -r publish --access public"
    },
    "devDependencies": {
        "typescript": "^5.0.0"
    },
    "engines": {
        "node": ">=18"
    },
    "packageManager": "pnpm@9.0.0"
}